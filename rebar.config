%% -*- erlang -*-
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
%% {erl_opts, [debug_info, {parse_transform, lager_transform}]}.
{edoc_opts, [{dir, "../../doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{deps,
 [
  %% Lets overwrite stuff that is not 18.0 compatible :(
  {edown,".*",     {git, "https://github.com/uwiger/edown.git",       {branch, "master"}}},
  %% the client libraries always use tagged versions we need the newest for development so.
  {lager, ".*", {git, "git://github.com/basho/lager", {ref,"cbf6679c6a693772fd1629c9cdc093e4c6c4ebf8"}}},
  {meck, "0.8.2", {git, "git://github.com/basho/meck.git", {tag, "0.8.2"}}},
  %% TODO: tag those!
  {clique, ".*", {git, "https://github.com/project-fifo/clique.git", {branch, "develop"}}},
  {cuttlefish, ".*", {git, "https://github.com/tsloughter/cuttlefish.git", {branch, "develop"}}},
  {erlcloud, ".*", {git, "git://github.com/project-fifo/erlcloud", {branch, "0.8.6"}}},
  {jsx, "1.4.5"},
  {riak_core, ".*", {git, "git://github.com/project-fifo/riak_core", {branch, "fifo-0.6.2"}}},
  %% TODO: tag those!
  {fifo_db, ".*", {git, "https://github.com/project-fifo/fifo-db.git", {tag, "0.1.7"}}},
  {cluster_info, ".*", {git, "https://github.com/basho/cluster_info.git", {tag, "2.0.3"}}},

  {riak_ensemble, ".*", {git, "https://github.com/basho/riak_ensemble.git", {tag, "2.0.0"}}},
  {fifo_s3, ".*", {git, "https://github.com/project-fifo/fifo_s3.git", {tag, "0.1.10"}}},
  {fifo_dt, "0.1.*", {git, "https://github.com/project-fifo/fifo_dt.git", {tag, "0.1.51"}}},
  {uuid, ".*", {git, "https://github.com/project-fifo/erlang-uuid.git", {tag, "0.4.7"}}},
  {hackney, ".*", {git, "git://github.com/benoitc/hackney.git", {tag, "0.6.1"}}},
  {eplugin, "0.1.4"},
  {sgte, ".*", {git, "https://github.com/project-fifo/sgte.git", {branch, "master"}}},
  {rankmatcher, "0.1.2"},
  {mdns_server_lib, "0.1.19"},
  {jsxd, "0.1.10"},
  {fifo_spec, "0.1.*", {git, "https://github.com/project-fifo/fifo_spec.git", {tag, "0.1.19"}}},
  {fifo_utils, "0.1.12"},
  {libhowl, "0.1.*", {git, "https://github.com/project-fifo/libhowl.git", {tag, "0.1.25"}}},
  {libchunter, "0.1.*", {git, "https://github.com/project-fifo/libchunter.git", {tag, "0.1.40"}}},
  {libsnarl, "0.3.*", {git, "https://github.com/project-fifo/libsnarl.git", {tag, "0.3.25"}}},
  {libleofs, "0.1.2"},
  {lager_watchdog, "0.1.10"},
  {folsom_ddb, "0.1.16"},
  eper,
  recon
 ]}.

{plugins, [pc,
           {rebar3_cuttlefish, ".*", {git, "git://github.com/tsloughter/rebar3_cuttlefish.git", {branch, "master"}}}
          ]}.

{xref_extra_paths,["apps/sniffle_coverage/src", "apps/sniffle_watchdog/src"]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, % exports_not_used, that is a problem with having multiple apps
               deprecated_function_calls, deprecated_functions]}.


{pre_hooks, [{compile, "make version_header"}]}.

{provider_hooks,
 [{post, [{release, cuttlefish}]}]}.

{overrides,
 [
  %% R18
  {override, cluster_info,
   [{erl_opts, [{i,"./priv/"}, debug_info]}]},
  {override, rankmatcher,
   [{erl_opts, [{i,"deps"}, debug_info]}]},
  {override, dflow,
   [{erl_opts, [debug_info]}]},
  {override, dqe,
   [{erl_opts, [debug_info]}]},
  {override, mdns_client_lib,
   [{erl_opts, [debug_info, {parse_transform, lager_transform}]}]},
  {override, edown,
   [{erl_opts, [debug_info]}]},
  {override, eper,
   [{erl_opts, [debug_info]}]},

  {override, riak_core,
   [{erl_opts, [{parse_transform, lager_transform},
                debug_info, {platform_define, "^[0-9]+", namespaced_types},
                {platform_define, "^R15", "old_hash"}]}]},
  {override, wiggle,
   [{erl_opts, [{i, "deps"},
                debug_info,
                {parse_transform, lager_transform}]}]},
  {override, riak_ensemble,
   [{erl_opts, [debug_info,
                warn_untyped_record,
                {parse_transform, lager_transform}]}]},
  {override, pooler,
   [{erl_opts,
     [{platform_define, "^[0-9]+", namespaced_types},
      debug_info,
      inline]}]},
  %% Normal
  {override, setup, [{post_hooks, []}]},
  {override, eleveldb,
   [{pre_hooks, [{compile, "c_src/build_deps.sh get-deps"},
                 {compile, "c_src/build_deps.sh"}]},

    {post_hooks, [{clean, "c_src/build_deps.sh clean"}]},

    {plugins,
     [pc]},

    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]}]}]}.

{profiles, [
            {short, [{erl_opts, [{d, 'EQC_SHORT_TEST'}]}]},
            {long, [{erl_opts, [{d, 'EQC_LONG_TEST'}]}]},
            {prod, [{relx, [{dev_mode, false}]}]}
           ]}.


{relx,
 [{release, {"sniffle", "0.6.2"},
   [
    sasl,
    sniffle_api,
    sniffle_console,
    sniffle_create,
    sniffle_watchdog,
    sniffle,
    {setup , load},
    {cuttlefish, load},
    {rankmatcher, load},
    {bear, load}, % we need this since folsom doesn't include it
    %% Runtime tools
    {recon, load},
    {eper, load}
   ]},

  {dev_mode, true},
  {include_erts, true},
  {generate_start_script, false},
  {overlay_vars, "rel/vars.config"},
  {overlay,
   [{mkdir, "etc"},
    {copy, "rel/files/erl", "erts-\{\{erts_vsn\}\}/bin/erl"},
    {copy, "rel/files/nodetool", "erts-\{\{erts_vsn\}\}/bin/nodetool"},
    {template, "rel/files/fifo_complete.sh", "etc/fifo_complete.sh"},
    {template, "rel/files/sniffle", "bin/sniffle"},
    {template, "rel/files/sniffle-admin", "bin/sniffle-admin"},
    {copy, "_build/default/bin/cuttlefish", "bin/cuttlefish"},

    {copy, "share", "share"},
    {copy, "_build/prod/lib/fifo_utils/priv/update_config.sh", "share/"},
    {template, "schema/sniffle.schema", "share/schema/00-sniffle.schema"},
    {template, "schema/erlang_vm.schema", "share/schema/01-vm.schema"},
    {template, "_build/prod/lib/riak_core/priv/riak_core.schema", "share/schema/02-riak_core.schema"},
    {template, "schema/lager.schema", "share/schema/03-lager.schema"},
    {template, "_build/prod/lib/fifo_db/priv/fifo_db.schema", "share/schema/04-fifo_db.schema"},
    {template, "_build/prod/lib/fifo_db/priv/eleveldb.schema", "share/schema/05-eleveldb.schema"},
    {template, "_build/prod/lib/mdns_client_lib/priv/mdns_client.schema", "share/schema/06-mdns_client.schema"},
    {template, "_build/prod/lib/mdns_server_lib/priv/mdns_server.schema", "share/schema/07-mdns_server.schema"},
    {template, "_build/prod/lib/libsnarl/priv/libsnarl.schema", "share/schema/08-libsnarl.schema"},
    {template, "schema/riak_sysmon.schema", "share/schema/09-riak_sysmon.schema"},
    {template, "_build/prod/lib/folsom_ddb/priv/folsom_ddb.schema", "share/schema/10-folsom_ddb.schema"},
    {template, "schema/snmp.schema", "share/schema/11-snmp.schema"},
    %% TODO: make rebar3 compile that
    {copy, "apps/sniffle/mibs/SNIFFLE-MIB.mib", "share/SNIFFLE-MIB.mib"},
    {copy, "snmp", "snmp"}
   ]}]}.

%% Cuttlefish filename
{cuttlefish_filename, "sniffle.conf.example"}.

{dialyzer, [
            {plt_extra_apps, [riak_ensemble, rankmatcher, sgte, folsom, libleofs, base16, chash, fifo_utils, jsx, jsxd, fifo_spec, fifo_dt, riak_core]}
            %%{base_plt_apps, [atom(), ...]},
            %%{base_plt_location, global | file:filename()},
            %%{base_plt_prefix, string()}
           ]}.
